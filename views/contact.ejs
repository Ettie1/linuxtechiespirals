              <li class="flex justify-between">
                <span>Saturday:</span>
                <span>10:00 AM - 2:00 PM PST</span>
              </li>
              <li class="flex justify-between">
                <span>Sunday:</span>
                <span>Closed</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

