

<section class="bg-slate-900 text-white py-20">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Us</h1>
      <p class="text-xl text-slate-300">
        Have questions or ready to start your project? Get in touch with our team.
      </p>
    </div>
  </div>
</section>

<section class="py-20">
  <div class="container">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <h2 class="text-3xl font-bold mb-6">Get in Touch</h2>
        <div class="card p-6 shadow-lg">
          <% if (submitted) { %>
            <div class="text-center py-12">
              <div class="inline-flex items-center justify-center p-3 bg-emerald-100 rounded-full mb-4">
                <!-- Send icon SVG -->
                <svg class="h-8 w-8 text-emerald-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"/></svg>
              </div>
              <h3 class="text-2xl font-bold mb-2">Message Sent!</h3>
              <p class="text-muted-foreground mb-6">
                Thank you for reaching out. We'll get back to you within 48 hours.
              </p>
              <a href="/contact" class="btn bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded">Send Another Message</a>
            </div>
          <% } else { %>
            <form action="/contact" method="POST" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                  <label for="name" class="block font-medium">Full Name</label>
                  <input type="text" id="name" name="name" placeholder="John Doe" required class="input" />
                </div>
                <div class="space-y-2">
                  <label for="email" class="block font-medium">Email Address</label>
                  <input type="email" id="email" name="email" placeholder="john@example.com" required class="input" />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                  <label for="company" class="block font-medium">Company Name</label>
                  <input type="text" id="company" name="company" placeholder="Your Company" class="input" />
                </div>
                <div class="space-y-2">
                  <label for="service" class="block font-medium">Service Interested In</label>
                  <select id="service" name="service" class="input">
                    <option value="" disabled selected>Select a service</option>
                    <option value="linux-support">Linux Support</option>
                    <option value="software-development">Software Development</option>
                    <option value="saas-solutions">SaaS Solutions</option>
                    <option value="consulting">Consulting</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div class="space-y-2">
                <label for="message" class="block font-medium">Message</label>
                <textarea id="message" name="message" placeholder="Tell us about your project or inquiry..." rows="6" required class="input"></textarea>
              </div>

              <button type="submit" class="w-full bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded">Send Message</button>
            </form>
          <% } %>
        </div>
      </div>

      <div>
        <h2 class="text-3xl font-bold mb-6">Contact Information</h2>
        <div class="space-y-6">
          <div class="card p-6 shadow-lg">
            <div class="flex items-start gap-4">
              <div class="bg-emerald-100 p-3 rounded-full">
                <!-- Mail icon SVG -->
                <svg class="h-6 w-6 text-emerald-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M4 4h16v16H4z"/></svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg">Email Us</h3>
                <p class="text-muted-foreground mb-1">For general inquiries:</p>
                <!-- <a href="mailto:info@techiespirals.com" class="text-emerald-600 hover:underline">info@techiespirals.com</a> -->
                 <a href="mailto:info@techiespirals.com" class="text-emerald-600 hover:underline">spiraltech989@gmail.com</a>
                <p class="text-muted-foreground mt-2 mb-1">For support:</p>
                <!-- <a href="mailto:support@techiespirals.com" class="text-emerald-600 hover:underline">support@techiespirals.com</a> -->
                <a href="mailto:support@techiespirals.com" class="text-emerald-600 hover:underline">spiraltech989@gmail.com</a>
              </div>
            </div>
          </div>

          <div class="card p-6 shadow-lg">
            <div class="flex items-start gap-4">
              <div class="bg-emerald-100 p-3 rounded-full">
                <!-- Phone icon SVG -->
                <svg class="h-6 w-6 text-emerald-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 10l7 7 7-7"/></svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg">Call Us</h3>
                <p class="text-muted-foreground mb-1">Main Office:</p>
                <a href="tel:+27728290651" class="text-emerald-600 hover:underline">+27 72 829-0651</a>
                <p class="text-muted-foreground mt-2 mb-1">Support Hotline:</p>
                <a href="tel:+27825794648" class="text-emerald-600 hover:underline">+27 82 579-4648</a>
              </div>
            </div>
          </div>

          <div class="card p-6 shadow-lg">
            <div class="flex items-start gap-4">
              <div class="bg-emerald-100 p-3 rounded-full">
                <!-- MapPin icon SVG -->
                <svg class="h-6 w-6 text-emerald-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="10" r="3"/><path d="M12 2a7 7 0 017 7c0 5-7 13-7 13S5 14 5 9a7 7 0 017-7z"/></svg>
              </div>
              <div>
                <h3 class="font-semibold text-lg">Visit Us</h3>
                <p class="text-muted-foreground mb-2">Headquarters:</p>
